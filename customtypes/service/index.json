{
  "format": "page",
  "id": "service",
  "label": "Service",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "3D, Web, Art Direction etc. ",
          "allowTargetBlank": true,
          "multi": "heading2"
        }
      },
      "service_index": {
        "type": "Number",
        "config": {
          "label": "Service Index",
          "placeholder": ""
        }
      },
      "services_list": {
        "type": "Group",
        "config": {
          "label": "Services List",
          "repeat": true,
          "fields": {
            "listitem": {
              "type": "StructuredText",
              "config": {
                "label": "Listitem",
                "placeholder": "",
                "allowTargetBlank": true,
                "multi": "paragraph"
              }
            }
          }
        }
      },
      "text": {
        "type": "StructuredText",
        "config": {
          "label": "Text",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph"
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "service_type": {
        "type": "Select",
        "config": {
          "label": "Service Type",
          "placeholder": "3d",
          "options": [
            "3d",
            "graphic",
            "web",
            "art_direction",
            "ai",
            "sounddesign"
          ],
          "default_value": "3d"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
