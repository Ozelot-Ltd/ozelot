{
  "format": "page",
  "id": "project",
  "label": "Project",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "StructuredText",
        "config": {
          "label": "Title",
          "placeholder": "Project Name/Client",
          "allowTargetBlank": true,
          "multi": "heading2"
        }
      },
      "list_title": {
        "type": "StructuredText",
        "config": {
          "label": "List Title",
          "placeholder": "Same as Title but different render",
          "allowTargetBlank": true,
          "multi": "heading3"
        }
      },
      "project_number": {
        "type": "Number",
        "config": {
          "label": "Project Number",
          "placeholder": ""
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,heading5,heading6,strong,em,list-item"
        }
      },
      "images": {
        "type": "Group",
        "config": {
          "label": "Images",
          "repeat": true,
          "fields": {
            "image": {
              "type": "Image",
              "config": {
                "label": "Image",
                "constraint": {},
                "thumbnails": []
              }
            }
          }
        }
      },
      "is_main_discipline": {
        "type": "Select",
        "config": {
          "label": "Is Main Discipline",
          "placeholder": "",
          "options": [
            "general",
            "3d",
            "graphic",
            "web",
            "direction",
            "ai",
            "sounddesign"
          ],
          "default_value": "general"
        }
      },
      "is_3d": {
        "type": "Boolean",
        "config": {
          "label": "Is 3D",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "is_graphic_design": {
        "type": "Boolean",
        "config": {
          "label": "Is Graphic Design",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "is_web": {
        "type": "Boolean",
        "config": {
          "label": "Is Web",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "is_art_direction": {
        "type": "Boolean",
        "config": {
          "label": "Is Art Direction",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "is_ai": {
        "type": "Boolean",
        "config": {
          "label": "Is AI",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "is_sound_design": {
        "type": "Boolean",
        "config": {
          "label": "Is Sound Design",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {}
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
